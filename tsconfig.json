{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src", "@types", "__tests__"],
  "exclude": ["__tests__", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
